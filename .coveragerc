# .coveragerc
[run]
branch = True
relative_files = True
source =
    bot

# Normalisér stier på tværs af OS og forskellige workdirs (især Windows)
[paths]
source =
    bot
    */ai_trading_core/bot
    *\ai_trading_core\bot

[report]
# Skjul typiske "ikke-kørbare" linjer
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    except ImportError:
    except ModuleNotFoundError:

# Udeluk mapper/filer der ikke skal tælle i denne fase
omit =
    tests/*
    ops/*
    docs/*
    notebooks/*
    outputs/*
    logs/*
    backups/*
    mlruns/*
    data/*
    config/*
    **/__init__.py
    **/conftest.py

show_missing = True
precision = 2
