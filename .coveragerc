# .coveragerc
[run]
branch = True
relative_files = True
# Fokusér coverage på persistenslag (Fase 4)
source =
    utils
    tools
# Udeluk moduler der ikke indgår i denne test-scope
omit =
    tests/*
    ops/*
    docs/*
    notebooks/*
    outputs/*
    logs/*
    backups/*
    mlruns/*
    data/*
    config/*
    api/*
    services/*
    bot/*
    gui/*
    ui/*
    models/*
    **/__init__.py
    **/conftest.py

[paths]
# Normalisér stier på tværs af OS/workdirs
source =
    utils
    tools
    */ai_trading_core/utils
    */ai_trading_core/tools
    *\ai_trading_core\utils
    *\ai_trading_core\tools

[report]
# Skjul typiske "ikke-kørbare" linjer
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    except ImportError:
    except ModuleNotFoundError:
show_missing = True
precision = 2
skip_covered = True

[html]
directory = htmlcov
title = Coverage — Fase 4 (Persistens & Filhygiejne)

[xml]
output = reports/coverage.xml
