# .editorconfig
root = true

# ===== Standard (gælder alle filer) =====
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# ===== Python =====
[*.py]
indent_style = space
indent_size = 4

# ===== Shell / Bash =====
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# ===== YAML / YML (CI, workflows, configs) =====
[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = lf

# ===== JSON / TOML / INI =====
[*.{json,toml,ini}]
indent_style = space
indent_size = 2
end_of_line = lf

# ===== Markdown / RST (bevar spaces i tabeller/kodeblokke) =====
[*.{md,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# ===== PowerShell / Batch (CRLF i working copy – matcher .gitattributes) =====
[*.{ps1,psm1,bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 2

# ===== Makefile (tabs er påkrævet) =====
[Makefile]
indent_style = tab
